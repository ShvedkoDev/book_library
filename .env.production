# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Micronesian Teachers Digital Library
# ==============================================
#
# IMPORTANT: Copy this file to .env and fill in all values
# DO NOT commit .env file to version control
#
# Last Updated: 2025-10-27
# ==============================================

# ----------------------------------------------
# APPLICATION
# ----------------------------------------------
APP_NAME="Micronesian Teachers Digital Library"
APP_ENV=production
APP_KEY=
# Generate with: php artisan key:generate

APP_DEBUG=false
# IMPORTANT: Set to false in production for security

APP_URL=https://your-domain.com
# Your production domain URL with https://

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# Driver for maintenance mode (file or cache)

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12
# Password hashing rounds (higher = more secure but slower)

# ----------------------------------------------
# LOGGING
# ----------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=daily
# Use 'daily' for daily log rotation in production

LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
# Production: error, warning, or info
# Development: debug

# ----------------------------------------------
# DATABASE
# ----------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
# Use 127.0.0.1 for local MySQL, or remote host IP

DB_PORT=3306
DB_DATABASE=book_library
# Your production database name

DB_USERNAME=library_user
# Database user with appropriate privileges

DB_PASSWORD=
# REQUIRED: Strong password for database user
# Example: openssl rand -base64 32

# ----------------------------------------------
# SESSION
# ----------------------------------------------
SESSION_DRIVER=redis
# Production: redis or database (redis recommended)

SESSION_LIFETIME=120
# Session lifetime in minutes (120 = 2 hours)

SESSION_ENCRYPT=true
# Encrypt session data for security

SESSION_PATH=/
SESSION_DOMAIN=null
# Set to .your-domain.com for subdomain sharing

SESSION_SECURE_COOKIE=true
# Require HTTPS for cookies

SESSION_SAME_SITE=lax
# lax or strict for CSRF protection

# ----------------------------------------------
# CACHE
# ----------------------------------------------
CACHE_STORE=redis
# Production: redis (recommended) or database

CACHE_PREFIX=library_cache
# Prefix for cache keys

# ----------------------------------------------
# QUEUE
# ----------------------------------------------
QUEUE_CONNECTION=redis
# Production: redis, database, or sqs
# redis is recommended for better performance

QUEUE_FAILED_DRIVER=database-uuids
# Store failed jobs in database

# ----------------------------------------------
# REDIS (Recommended for Production)
# ----------------------------------------------
REDIS_CLIENT=phpredis
# phpredis is faster than predis

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
# Set password if Redis has authentication

REDIS_PORT=6379

REDIS_CACHE_DB=1
# Database number for cache

REDIS_QUEUE_DB=2
# Database number for queues

REDIS_SESSION_DB=3
# Database number for sessions

# ----------------------------------------------
# MEMCACHED (Alternative to Redis)
# ----------------------------------------------
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211
# Only needed if using memcached instead of redis

# ----------------------------------------------
# BROADCASTING
# ----------------------------------------------
BROADCAST_CONNECTION=log
# Options: pusher, redis, log, null

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
# Only needed if using Pusher for real-time features

# ----------------------------------------------
# FILESYSTEM & STORAGE
# ----------------------------------------------
FILESYSTEM_DISK=local
# Options: local, s3, ftp, sftp

# For local storage:
# Files stored in storage/app/public/

# For S3 storage (if using AWS):
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ----------------------------------------------
# MAIL CONFIGURATION
# ----------------------------------------------
MAIL_MAILER=smtp
# Options: smtp, sendmail, mailgun, ses, postmark, log

MAIL_HOST=smtp.example.com
# Your SMTP server hostname

MAIL_PORT=587
# Common ports: 587 (TLS), 465 (SSL), 25 (unsecured)

MAIL_USERNAME=
# SMTP username / email address

MAIL_PASSWORD=
# SMTP password

MAIL_ENCRYPTION=tls
# Options: tls, ssl, null

MAIL_FROM_ADDRESS="noreply@your-domain.com"
# Email address that emails come from

MAIL_FROM_NAME="${APP_NAME}"
# Name that appears in "From" field

# Mailgun Configuration (if using Mailgun)
MAILGUN_DOMAIN=
MAILGUN_SECRET=
MAILGUN_ENDPOINT=api.mailgun.net

# SendGrid Configuration (if using SendGrid)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your_sendgrid_api_key

# Amazon SES Configuration (if using SES)
AWS_SES_KEY=
AWS_SES_SECRET=
AWS_SES_REGION=us-east-1

# Postmark Configuration (if using Postmark)
POSTMARK_TOKEN=

# ----------------------------------------------
# VITE ASSET COMPILATION
# ----------------------------------------------
VITE_APP_NAME="${APP_NAME}"

# If using CDN for assets:
# ASSET_URL=https://cdn.your-domain.com

# ----------------------------------------------
# FILAMENT ADMIN PANEL
# ----------------------------------------------
FILAMENT_FILESYSTEM_DISK=local
# Where Filament stores uploads

# ----------------------------------------------
# SECURITY
# ----------------------------------------------

# Trusted Proxies (if behind load balancer)
# TRUSTED_PROXIES=*
# Or specific IPs: TRUSTED_PROXIES=10.0.0.1,10.0.0.2

# Trusted Hosts
# TRUSTED_HOSTS=your-domain.com,www.your-domain.com

# ----------------------------------------------
# ANALYTICS & TRACKING (Optional)
# ----------------------------------------------

# Google Analytics
# GOOGLE_ANALYTICS_ID=

# Sentry Error Tracking
# SENTRY_LARAVEL_DSN=
# SENTRY_TRACES_SAMPLE_RATE=1.0

# ----------------------------------------------
# RATE LIMITING
# ----------------------------------------------
RATE_LIMIT_PER_MINUTE=60
# API rate limit per minute per IP

# ----------------------------------------------
# BACKUP (if using spatie/laravel-backup)
# ----------------------------------------------
# BACKUP_DISK=s3
# BACKUP_NOTIFICATION_EMAIL=admin@your-domain.com

# ----------------------------------------------
# THIRD PARTY SERVICES
# ----------------------------------------------

# Google reCAPTCHA (for registration)
# RECAPTCHA_SITE_KEY=
# RECAPTCHA_SECRET_KEY=

# OAuth Providers (if implementing social login)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=

# FACEBOOK_CLIENT_ID=
# FACEBOOK_CLIENT_SECRET=
# FACEBOOK_REDIRECT_URI=

# ----------------------------------------------
# APPLICATION-SPECIFIC SETTINGS
# ----------------------------------------------

# Maximum file upload size (in KB)
MAX_FILE_UPLOAD_SIZE=102400
# 102400 KB = 100 MB

# Books per page in library
BOOKS_PER_PAGE=12

# Email verification required
MUST_VERIFY_EMAIL=false
# Set to true to require email verification

# Terms of Use acceptance required
REQUIRE_TERMS_ACCEPTANCE=false
# Set to true when Terms feature is implemented

# Admin email for notifications
ADMIN_EMAIL=admin@your-domain.com

# Support email for user inquiries
SUPPORT_EMAIL=support@your-domain.com

# ----------------------------------------------
# DEVELOPMENT/DEBUG TOOLS (Disable in Production)
# ----------------------------------------------
TELESCOPE_ENABLED=false
# Laravel Telescope (if installed) - disable in production

DEBUGBAR_ENABLED=false
# Laravel Debugbar (if installed) - disable in production

# ----------------------------------------------
# NOTES
# ----------------------------------------------
#
# After updating .env file:
# 1. php artisan config:cache
# 2. php artisan route:cache
# 3. php artisan view:cache
# 4. sudo systemctl restart php8.2-fpm
#
# To generate APP_KEY:
#   php artisan key:generate
#
# To clear caches:
#   php artisan config:clear
#   php artisan cache:clear
#   php artisan route:clear
#   php artisan view:clear
#
# ==============================================
